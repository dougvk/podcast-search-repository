# Environment Configuration for Podcast Search Repository
# Copy this file to .env and modify the values as needed

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

# Application Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Application Metadata
APP_NAME="Podcast Search Repository"
APP_VERSION=1.0.0

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API Server Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# API Security
API_SECRET_KEY=your-secret-key-change-this-in-production

# =============================================================================
# DATA DIRECTORIES
# =============================================================================

DATA_DIR=data
RAW_TRANSCRIPTS_DIR=data/raw_transcripts
PROCESSED_DATA_DIR=data/processed
VIDEO_LIBRARIES_DIR=data/video_libraries
INDEXES_DIR=data/indexes

# =============================================================================
# PROCESSING CONFIGURATION
# =============================================================================

MAX_BATCH_SIZE=20
MAX_WORKERS=4
PROCESSING_TIMEOUT=3600

# =============================================================================
# EMBEDDING CONFIGURATION
# =============================================================================

EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_CACHE_ENABLED=true
EMBEDDING_BATCH_SIZE=32
USE_GPU=false

# =============================================================================
# SEARCH CONFIGURATION
# =============================================================================

DEFAULT_SEARCH_TYPE=hybrid
MAX_SEARCH_RESULTS=50
SEARCH_TIMEOUT_SECONDS=30
MIN_SIMILARITY_THRESHOLD=0.3